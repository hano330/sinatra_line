<% content_for :title do %>
    Talk|<%= @to_user.name %>
<% end %>

<% content_for :css do %>
    /talk.css
<% end %>

<h1><%= @to_user.name %></h1>
<div id="wrapper" style="overflow: auto;">
  <% if @posts.present? %>
    <% @posts.each do |post| %>
          <% if post.name == @current_user.name %>
            <div class="me">
              <big><%= h post.body %></big><br>
              <small>
                <%= h post.created_at.in_time_zone("Tokyo").strftime("%H:%M") %> by <%= h post.name %>
                <% if post.kidoku == 1 %>
                    :Seen
                <% end %>
              </small>
            </div>
          <% elsif post.name == @to_user.name %>
            <div class="you">
              <big><%= h post.body %></big><br>
              <small>
                <%= h post.created_at.in_time_zone("Tokyo").strftime("%H:%M") %> by <%= h post.name %>
              </small>
            </div>
          <% end %>
    <% end %>
  <% else %>
     <h2>Please send a first messeage to <%= @to_user.name %>!</h2>
  <% end %>
</div>

<form method="post" action="/new">
  <p><textarea name="body" rows="5" cols="40" style="font-size:15px"placeholder="Please write here."></textarea></p>
  <input type="submit" class="button" style="font-size:20px;font-family:arial;" value="Send">
  <a href="/"><input class="button" type="button" style="font-size:20px;font-family:arial;" value="Back"></a>
</form>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script>
  $("textarea").click(function(){
     $("#wrapper").scrollTop($("#wrapper").height());
  });
</script>
