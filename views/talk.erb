<% content_for :title do %>
    トーク|<%= @to_user.name %>
<% end %>

<% content_for :css do %>
    /talk.css
<% end %>

<h1><%= @to_user.name %></h1>
<div id="wrapper" style="overflow: auto;">
  <% if @posts.present? %>
    <% @posts.each do |post| %>
          <% if post.user_id == @current_user.id && post.body != nil %>
            <div class="me">
              <div class="my_content">
                <big><%= h post.body %></big><br>
              </div>
              <div class="my_time">
                <small>
                  <%= h post.created_at.in_time_zone("Tokyo").strftime("%H:%M") %> by <%= h @current_user.name %>
                  <% if post.kidoku == 1 %>
                      ：既読
                  <% end %>
                </small>
              </div>
            </div>
          <% elsif post.user_id == @to_user.id && post.body != nil %>
            <div class="you">
              <big><%= h post.body %></big><br>
              <small>
                <%= h post.created_at.in_time_zone("Tokyo").strftime("%H:%M") %> by <%= h @to_user.name %>
              </small>
            </div>
          <% end %>
    <% end %>
  <% else %>
     <h2><%= @to_user.name %>さんに初メッセージを送ろう！</h2>
  <% end %>
</div>

<form method="post" action="/new">
  <p><textarea name="body" rows="5" cols="40" style="font-size:15px" placeholder="ここに入力してください。"></textarea></p>
  <input type="submit" class="button" style="font-size:20px;font-family:arial;" value="送信">
  <a href="/"><input class="button" type="button" style="font-size:20px;font-family:arial;" value="戻る"></a>
</form>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script>
    $("#wrapper").scrollTop($(document).height());
</script>